{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <h1>Client index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>RaisonSocial</th>
                <th>Adresse</th>
                <th>SecteurActivite</th>
                <th>Logo</th>
                <th>UrlAcces</th>
                <th>Couleurs</th>
                <th>Gamme</th>
                <th>Bio</th>
                <th>Background</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.raisonSocial }}</td>
                <td>{{ client.adresse }}</td>
                <td>{{ client.secteurActivite }}</td>
                <td>{{ client.logo }}</td>
                <td>{{ client.urlAcces }}</td>
                <td>{{ client.couleurs }}</td>
                <td>{{ client.gamme }}</td>
                <td>{{ client.bio }}</td>
                <td>{{ client.background }}</td>
                <td>
                    <a href="{{ path('app_client_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('app_client_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_client_new') }}">Create new</a>
{% endblock %}
